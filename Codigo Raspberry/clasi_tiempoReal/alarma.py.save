
import RPi.GPIO as GPIO
import time

def alarma(num):
	for i in range(2*num):
		GPIO.output(pin, GPIO.HIGH)
		time.sleep(0.5)
		GPIO.output(pin, GPIO.LOW)
		time.sleep(0.5)
	GPIO.cleanup()

#------------------------------------------
pin=21
GPIO.setwarnings(False)
GPIO.setmode(GPIO.BCM)
GPIO.setup(pin, GPIO.OUT)
alarma(2)
